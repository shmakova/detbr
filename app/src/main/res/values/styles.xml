<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BrowserTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/browser_color_primary</item>
        <item name="colorPrimaryDark">@color/browser_color_primary_dark</item>
        <item name="colorAccent">@color/browser_color_accent</item>
        <item name="android:textColorPrimary">@color/browser_text_color_primary</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/light_yellow</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation" tools:ignore="NewApi">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UrlStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.037</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FavoriteCardTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.012</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.012</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardDescriptionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.012</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
