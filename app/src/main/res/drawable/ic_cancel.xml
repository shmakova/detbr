<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/white"/>

            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/transparent"/>

            <stroke
                android:width="2dp"
                android:color="@color/white"/>

            <size
                android:width="48dp"
                android:height="48dp"/>

        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_close_black_24dp"
        android:gravity="center"
        android:tint="@color/dark_transparent"/>
</layer-list>