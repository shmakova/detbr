<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center"
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/white"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/transparent"/>

            <stroke
                android:width="2dp"
                android:color="@color/white"/>

            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_close_black_24dp"
        android:gravity="center"
        android:top="12dp"
        android:left="12dp"
        android:right="12dp"
        android:bottom="12dp"
        android:tint="@color/dark_transparent"/>
</layer-list>